{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist", // Thư mục chứa các file JavaScript sau khi biên dịch
    "rootDir": "./src", // Thư mục chứa các file TypeScript gốc
    "esModuleInterop": true, // Hỗ trợ import/export của các module
    "skipLibCheck": true, // Bỏ qua việc kiểm tra type của các thư viện
    "strict": true // Bật chế độ kiểm tra nghiêm ngặt của TypeScript
  },
  "include": [
    "src/**/*.ts"
  ], // Bao gồm các file TypeScript
  "exclude": [
    "node_modules"
  ] // Loại bỏ thư mục node_modules
}